<h1>New user</h1>

<%= form_with(scope: @create_user_form, url: users_path, method: :post) do |form| %>
  <% if @create_user_form.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(@create_user_form.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
        <% @create_user_form.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :email, style: "display: block" %>
    <%= form.email_field :email %>
  </div>

  <div>
    <%= form.label :password, style: "display: block" %>
    <%= form.password_field :password %>
  </div>

  <div>
    <%= form.label :password_confirmation, style: "display: block" %>
    <%= form.password_field :password_confirmation %>
  </div>

  <div>
    <%= form.submit 'Sign up' %>
  </div>
<% end %>
<br>

<div>
  <%= link_to "Back to users", users_path %>
</div>
